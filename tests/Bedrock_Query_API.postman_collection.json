			}
		},
		{
			"name": "Ask - Generate SQL query",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"question\": \"Generate SQL to show employees hired in the last 30 days\"\n}"
				},
				"url": {
					"raw": "{{bedrock_url}}/ask",
					"host": [
						"{{bedrock_url}}"
					],
					"path": [
						"ask"
					]
				}
			}
		},
		{
			"name": "Execute SQL - Count employees",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"sql\": \"SELECT COUNT(*) as total_employees FROM hr_data.hired_employees\"\n}"
				},
				"url": {
					"raw": "{{bedrock_url}}/sql",
					"host": [
						"{{bedrock_url}}"
					],
					"path": [
						"sql"
					]
				}
			}
		},
		{
			"name": "Execute SQL - Employees by department",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"sql\": \"SELECT d.department, COUNT(e.id) as employee_count FROM hr_data.departments d LEFT JOIN hr_data.hired_employees e ON d.id = e.department_id GROUP BY d.department\"\n}"
				},
				"url": {
					"raw": "{{bedrock_url}}/sql",
					"host": [
						"{{bedrock_url}}"
					],
					"path": [
						"sql"
					]
				}
			}
		},
